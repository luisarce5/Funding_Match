<%= form_for @loan do |f| %>

<% if @loan.errors.any? %>
  <div id="error message">
    <h2>
      <%= pluralize(@loan.errors.count,"error") %>
      this article from being saved:
    </h2>
    <ul>
      <% @loan.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
      <% end %>
    </ul>
  </div>
  <% end %>

<p>
  <%= f.label :title%><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :loan_amount%><br>
  <%= f.text_field :loan_amount %>
</p>

<p>
  <%= f.label :loan_description%><br>
  <%= f.text_area :loan_description, size: "60x12" %>
</p>

<p>
  <%= f.submit %>
</p>

<% end %>

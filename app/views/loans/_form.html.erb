<%= form_for @loan do |f| %>

<% if @loan.errors.any? %>
  <div id="error message">
    <h2>
      <%= pluralize(@loan.errors.count,"error") %>
      this Loan information from being saved:
    </h2>
    <ul>
      <% @loan.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
      <% end %>
    </ul>
  </div>
  <% end %>
<p>
  <%= f.label :title%><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :loan_amount%><br>
  <%= f.text_field :loan_amount %>
</p>

<p>
  <%= f.label :category%><br>
  <%= f.text_field :category%>
</p>

<p>
  <%= f.label :loan_description%><br>
  <%= f.text_area :loan_description, size: "60x12" %>
</p>

<p>
  <%= f.label :location%><br>
  <%= f.text_field :location%>
</p>

<p>
  <%= f.label :start_date%><br>
  <%= f.text_field :start_date%>
</p>

<p>
  <%= f.label :term%><br>
  <%= f.text_field :term%>
</p>

<p>
  <%= f.label :interest_rate%><br>
  <%= f.text_field :interest_rate%>
</p

<p>
  <%= f.submit %>
</p>

<% end %>

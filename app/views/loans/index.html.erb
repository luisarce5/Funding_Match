<%= stylesheet_link_tag("style.css") %>
<h2>Loans available for funding </h2>

  <% @loans.each do |loan| %>
    <div class="loan">

    <h3> <%= link_to "Loan Profile Details", loan_path(loan) %> </h3>

      <h3> <strong> Person name: </strong> <%= loan.user.user_name %> </h3>
      <h3> <%= loan.title%> </h3>
      <h4> <strong> Category: </strong> <%= loan.category %> </h4>
      <p> <strong> Loan Amount: </strong> <%= loan.loan_amount %> </p>
      <p> <strong> Location: </strong> <%=loan.location %> </p>
    </div>
  <% end %>

<%= stylesheet_link_tag("style.css") %>

<div>
  <%= link_to "Back to User Profiles", users_path%>
</div>

<h2>Loans available for funding </h2>

  <% @loans.each do |loan| %>
    <div class="loan">

    <h3> <%= link_to "Loan Profile Details", loan_path(loan) %> </h3>

    <p> <strong> Person name: </strong> <%= loan.user.user_name %> </p>
    <p> <%= loan.title%> </p>
    <p> <strong> Category: </strong> <%= loan.category %> </p>
    <p> <strong> Loan Amount: </strong> <%= loan.loan_amount %> </p>
    <p> <strong> Location: </strong> <%=loan.location %> </p>

    </div>
  <% end %>
